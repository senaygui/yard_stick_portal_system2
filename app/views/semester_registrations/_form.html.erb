
<%= simple_form_for(@semester_registration) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="col-12 col-md-12 form-group">
    <%= f.input :mode_of_payment, as: :select, :collection =>  [ "Monthly Payment", "Every Two Month Payment", "Every Three Month Payment","Full Semester Payment"], input_html: {class: "form-control custom-select"}, :include_blank => false%>
  </div>

  <div class="form-actions">
    <%= f.submit "Finish", class: "btn btn-primary btn-user" %>
  </div>
<% end %>
