<%provide(:title, "Grade Reports")%>

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>My GradeReport</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="/">Home</a></li>
					<li class="breadcrumb-item active">GradeReport</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<div class="col-12 col-md-12">
	<div class="card card-primary">
		<div class="card-header">
			<h3 class="card-title">Grade Reports</h3>
		</div>
		<div class="card-body">
			<table id='ordersTable' class='table table-striped table-sm'>
				<thead>
					<tr>
						<th>Student Name</th>
						<th>Student ID</th>
						<th>Academic Year</th>
						<th>Semester</th>
						<th>Year</th>
						<td>CGPA</td>
						<td>SGPA</td>
						<td>Academic Status</td>
						<th>Generated</th>
						
						<th>Actions</th>
					</tr>
				</thead>
					<%@grade_reports.each do |sm|%>
							<tr>
								<td><%= sm.student.name.full  %></td>
								<td><%= sm.student.student_id %></td>
								<td><%= sm.academic_calendar.calender_year %></td>
								<td><%= sm.semester %></td>
								<td><%= sm.year %></td>
								<td><%= sm.cgpa %></td>
								<td><%= sm.sgpa %></td>
								<td><%= sm.academic_status %></td>
								<td><%= sm.created_at.strftime("%b %d, %Y") %></td>
								
								<td class="actions">
					        <%= link_to("View", grade_report_path(sm), :class => 'btn-sm btn-primary') %>
					      </td>
							</tr>
					<%end%>
				<tbody>

				</tbody>
			</table>
		</div>
	</div>
</div>