<div id="scan" class="content tab">
  <div class="row">
    <div class="col-12 col-md-3">
      <div class="card card-primary">
        <div class="card-header">
          <h3 class="card-title">
            <i class="fas fa-info-circle mr-2"></i>
            <strong>Instruction</strong>

          </h3>
        </div>
        <!-- /.card-header -->
        <div class="card-body">
          <p  class="text-center"><strong>Fill in the space(s) or Select the appropriate box(es) or selctions. * fields are required.</strong></p>  
          <p class="text-muted text-center">
            Upload a scanned copy of all your academic documents. You must include your <strong>grade 8,10,and 12 certifaces</strong>;your <strong>grade 9,10,11,and 12 transcripts</strong>,COC, TVET/Diploma certificate(if any) and <strong>Degree</strong> certificate.
          </p>
          <p class="text-muted text-center">file type allowed are pdf and image files</p>
          <hr>
        </div>
        <!-- /.card-body -->
      </div>
    </div>
    <div class="col-12 col-md-9">
      <div class="card card-outline card-primary">
        <div class="card-header">
          <h3 class="card-title">
            <i class="fas fa-info-circle mr-2"></i>
            <strong>Scan Document Uploading</strong>
          </h3>
        </div>
        <div class="card-body">
          <%= simple_form_for(@document, url:document_path) do |f| %>
            <%= f.error_notification %>
            <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>
            <div class="row">
              <div class="col-12 col-md-6 form-group">
                  <%= f.input :grade_8_ministry, as: :file, required: true, label: "Grade 8 ministry certificate",class: 'form-control'%>
                </div>
              <div class="col-12 col-md-6 form-group">
                <%= f.input :highschool_transcript, as: :file, required: true, label: "Grade 9, 10, 11,and 12 transcripts",class: 'form-control'%>
              </div>
              <div class="col-12 col-md-6 form-group">
                <%= f.input :grade_10_matric, as: :file, label: "Grade 10 matric certificate",class: 'form-control'%>
              </div>
              <div class="col-12 col-md-6 form-group">
                <%= f.input :grade_12_matric, as: :file, required: true, label: "Grade 12 matric certificate",class: 'form-control'%>
              </div>
              <div class="col-12 col-md-6 form-group">
                <%= f.input :coc, as: :file, label: "Certificate of competency (COC)",class: 'form-control'%>
              </div>
              <div class="col-12 col-md-6 form-group">
                <%= f.input :diploma_certificate, as: :file, label: "TVET/Diploma certificate",class: 'form-control'%>
              </div>
              <div class="col-12 col-md-6 form-group">
                <%= f.input :degree_certificate, as: :file, required: true, label: "Undergraduate degree certificate",class: 'form-control'%>
              </div>
              
            </div>
            <div class="">
              <%= f.submit "Update Documents", class: "btn btn-primary btn-user", id: "box1" %>                              
            </div>
          <%end%>
        </div>

      </div>
    </div>
  </div>
</div>

<style>
  .custom-file-label::after {
      position: absolute;
      top: 0;
      right: 0;
      bottom: 0;
      z-index: 3;
      display: block;
      height: 2.25rem;
      padding: 0.375rem 0.75rem;
      line-height: 1.5;
      color: #fff;
      background: #77cc6d !important;
      content: "Upload File";
      background-color: #e9ecef;
      border-left: inherit;
      border-radius: 0 0.25rem 0.25rem 0;
      border-radius: 3px;
      -webkit-box-shadow: 0 2px 5px 0 rgb(0 0 0 / 20%), 0 2px 10px 0 rgb(0 0 0 / 10%);
      box-shadow: 0 2px 5px 0 rgb(0 0 0 / 20%), 0 2px 10px 0 rgb(0 0 0 / 10%);
  }
</style>
