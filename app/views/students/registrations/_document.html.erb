    <%= f.input :coc, as: :file, label: "Certificate of competency (COC)",class: 'form-control'%>
  </div>
  <div class="col-12 col-md-6 form-group">
    <%= f.input :diploma_certificate, as: :file, label: "TVET/Diploma certificate",class: 'form-control'%>
  </div>
  <div class="col-12 col-md-6 form-group">
    <%= f.input :degree_certificate, as: :file, required: true, label: "Undergraduate degree certificate",class: 'form-control'%>
  </div>
