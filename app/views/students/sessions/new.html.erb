<%provide(:title, "Sign In")%>
<div class="login-page">
  <div class="login-box mt-5">
    <!-- /.login-logo -->
    <div class="card card-outline card-primary">
      <div class="card-header text-center">
        <a href="/" class="h1"><a href="/"><%= link_to image_tag("logo.png", size: "142.203x55", alt: "logo"), root_path, class: "navbar-brand"%></a></a>
      </div>
      <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="input-group mb-3">
            <%= f.email_field :email, autofocus: true, autocomplete: "email",  class: "form-control", placeholder: "Email" %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-envelope"></span>
              </div>
            </div>
          </div>
          <div class="input-group mb-3">
            <%= f.password_field :password, autocomplete: "new-password", class: "form-control" , placeholder: "Password" %>
            <div class="input-group-append">
              <div class="input-group-text">
                <span class="fas fa-lock"></span>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <% if devise_mapping.rememberable? %>
                <div class="icheck-primary">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <%end%>
            </div>
            <!-- /.col -->
            <div class="col-12 my-2">
              <%= f.submit "Sign In", class: "btn btn-block btn-primary" %>  
            </div>
            <!-- /.col -->
          </div>
        <%end%>

        <p class="mb-1">
          <%= render "students/shared/links" %>
        </p>

      </div>
      <!-- /.login-card-body -->
    </div>
  </div>

</div>