<section class="content">
  <div class="container-fluid">
    <div class="row">
    	<div class="col-12 col-md-12">
        <div class="card card-primary">
          <div class="card-header">
            <h3 class="card-title">Student LMS Credential</h3>
          </div>
          <div class="card-body">
          	<div class="row">
	          	<div class="col-12 col-md-12">
	          		<ul class="list-group list-group-unbordered mb-3">
		              <li class="list-group-item mx-3">
		                <b>Student ID</b> <a class="text-muted float-right"><%= current_student.student_id.present? ? current_student.student_id : "Not Assigned Yet"%></a>
		              </li>
		              <li class="list-group-item mx-3">
		                <b>Password</b> <a class="text-muted float-right"><%= current_student.student_password.present? ? current_student.student_password : "Not Assigned Yet"%></a>
		              </li>
		            </ul>
                <%= link_to "Go to Learning Platfrom", "https://lms.yic.edu.et", class: "btn btn-primary"%>
	          	</div>
          	</div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>