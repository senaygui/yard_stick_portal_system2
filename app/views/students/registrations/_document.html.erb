<div class="row">
	<div class="col-12 col-md-6 form-group">
   	 	<%= f.input :grade_8_ministry, as: :file, required: true, label: "Grade 8 ministry certificate",class: 'form-control'%>
  	</div>
	<div class="col-12 col-md-6 form-group">
    <%= f.input :highschool_transcript, as: :file, required: true, label: "Grade 9, 10, 11,and 12 transcripts",class: 'form-control'%>
  </div>
