<style>
	.custom-file-label::after {
	    position: absolute;
	    top: 0;
	    right: 0;
	    bottom: 0;
	    z-index: 3;
	    display: block;
	    height: 2.25rem;
	    padding: 0.375rem 0.75rem;
	    line-height: 1.5;
	    color: #fff;
	    background: #77cc6d !important;
	    content: "Upload File";
	    background-color: #e9ecef;
	    border-left: inherit;
	    border-radius: 0 0.25rem 0.25rem 0;
	    border-radius: 3px;
    	-webkit-box-shadow: 0 2px 5px 0 rgb(0 0 0 / 20%), 0 2px 10px 0 rgb(0 0 0 / 10%);
