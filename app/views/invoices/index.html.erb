<%provide(:title, "Payment History")%>

<section class="content-header">
	<div class="container-fluid">
		<div class="row mb-2">
			<div class="col-sm-6">
				<h1>My Invoices</h1>
			</div>
			<div class="col-sm-6">
				<ol class="breadcrumb float-sm-right">
					<li class="breadcrumb-item"><a href="/">Home</a></li>
					<li class="breadcrumb-item active">Inovices</li>
				</ol>
			</div>
		</div>
	</div><!-- /.container-fluid -->
</section>

<div class="col-12 col-md-12">
	<div class="card card-primary">
		<div class="card-header">
			<h3 class="card-title">Invoices History</h3>
		</div>
		<div class="card-body">
			<table id='ordersTable' class='table table-striped table-sm'>
				<thead>
					<tr>
						<th>Invoice Number</th>
						<th>Invoice Date</th>
						<th>Status</th>
						<th>Total Price</th>
						<th>Actions</th>
					</tr>
				</thead>

				<tbody>
					<%@semesters.each do |sm|%>
						<% sm.invoices.each do |invoice| %>
							<tr>
								<td><%= invoice.invoice_number %></td>
								<td><%= invoice.created_at.strftime("%b %d, %Y") %></td>
								<td><a class="ml-2 badge badge-success p-2 text-white"><%= invoice.invoice_status %></a></td>
								<td><%= invoice.total_price %> ETB</td>
								<td class="actions">
					        <%= link_to("View", invoice_path(invoice), :class => 'btn-sm btn-primary') %>
					        <%= link_to("Edit", edit_payment_transaction_path(invoice.payment_transaction), :class => 'btn-sm btn-secondary') if invoice.payment_transaction.present?%>
					      </td>
							</tr>
						<% end %>
					<%end%>
				</tbody>
			</table>
		</div>
	</div>
</div>